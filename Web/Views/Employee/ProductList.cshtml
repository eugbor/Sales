@model Web.Models.ProductViews.ProductListModel

@{
    ViewBag.Title = "Список товаров";
}

<h2>@ViewBag.Title</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <a href="@Url.Action("ProductAdd", "Product")" class="btn btn-primary btn-xs" role="button">Добавить товар</a><br>
    </div>
    <div class="panel-footer">Фильтр</div>
</div>
<table class="table table-hover">
    <thead>
    <tr>
        <th>Название</th>
        <th>Описание</th>
        <th>Цена</th>
        <th>Размер</th>
        <td></td>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Cost</td>
                <td>@item.Size</td>
                <td>
                    <a href="@Url.Action("ProductEdit", "Product", new {id = item.Id})" class="btn"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("ProductDelete", "Product", new {id = item.Id})" class="btn"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
