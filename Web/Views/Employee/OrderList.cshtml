@model Web.Models.OrderViews.OrderListModel
@{
    ViewBag.Title = "Список заказов";
}

<h2>@ViewBag.Title</h2>
<div class="panel panel-default">
    <div class="panel-footer">Фильтр</div>
</div>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Имя клиента</th>
            <th>Дата</th>
            <th>Статус</th>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.UserEmail</td>
                <td>@item.Date</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("OrderEdit", "Employee", new {id = item.Id})" class="btn"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span></a>
                    <a href="@Url.Action("List", "Product", new {order = item.Id})" class="btn @*btn-primary btn-xs*@" @*role="button"*@><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                    <a href="@Url.Action("OrderCancel", "Employee", new {id = item.Id})" class="btn"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>